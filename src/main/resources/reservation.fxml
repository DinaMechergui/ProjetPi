<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="eventsGrid" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ReservationController" stylesheets="@styles.css" hgap="10" vgap="10" alignment="CENTER">

    <!-- Combobox pour choisir un événement -->
    <Label text="Événement:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="eventCombo" styleClass="product-card" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <!-- Combobox pour choisir un service -->
    <Label text="Service:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="serviceCombo" styleClass="product-card" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- DatePicker pour choisir une date -->
    <Label text="Date de réservation:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <DatePicker fx:id="datePicker" styleClass="product-card" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Champ de texte pour afficher le prix -->
    <Label text="Prix (TND):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="priceField" styleClass="product-card" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- Bouton pour ajouter au panier -->
    <Button text="Ajouter au panier" styleClass="button" onAction="#addToCart" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!-- GridPane pour afficher les articles du panier -->
    <Label text="Panier:" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
    <GridPane fx:id="cartGrid" styleClass="product-card" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" hgap="10" vgap="10"/>

    <!-- Label pour afficher le prix total -->
    <Label fx:id="totalPriceLabel" styleClass="product-name" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" alignment="CENTER"/>

    <!-- Bouton pour confirmer la réservation -->
    <Button text="Confirmer la réservation" styleClass="button" onAction="#confirmReservation" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2"/>
    <!-- Label for displaying the status -->
    <Label fx:id="statutLabel" text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" alignment="CENTER"/>

    <!-- ImageView pour afficher l'image du service sélectionné -->
    <ImageView fx:id="serviceImage" GridPane.columnIndex="1" GridPane.rowIndex="5" fitWidth="200" fitHeight="200"/>
</GridPane>
