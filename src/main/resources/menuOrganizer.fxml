<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.MenuOrganizerController">
    <left>
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <Button text="Ajouter Invité" fx:id="btnAjouterInvite" onAction="#showAjouterInvite"/>
            <Button text="Ajouter Cadeau" fx:id="btnAjouterCadeau" onAction="#showAjouterCadeau"/>
            <Button text="Ajouter Événement" fx:id="btnAjouterEvenement" onAction="#showAjouterEvenement"/>
            <Button text="Afficher Événements" fx:id="btnAfficherEvenements" onAction="#showAfficherEvenements"/>
            <Button text="Afficher Invités" fx:id="btnAfficherInvites" onAction="#showAfficherInvites"/>
            <Button text="Afficher Cadeaux" fx:id="btnAfficherCadeaux" onAction="#showAfficherCadeaux"/>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentPane"/>
    </center>
</BorderPane>
