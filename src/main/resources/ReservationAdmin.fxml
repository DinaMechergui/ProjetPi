<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Wedding.controllers.ReservationAdminController" stylesheets="@styles1.css">
    <top>
        <HBox style="-fx-background-color: #6d8c7a; -fx-padding: 10;" spacing="10" alignment="CENTER_LEFT">
            <Label text="Gestion des Réservations" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <left>
        <!-- Barre latérale -->
        <VBox style="-fx-background-color: #5a7364; -fx-padding: 10;" spacing="20" prefWidth="200" alignment="TOP_CENTER">
            <!-- Image d'admin en cercle -->
            <ImageView fx:id="adminPhoto" fitHeight="80" fitWidth="80" preserveRatio="true">
                <image>
                    <Image url="@/images/admin.jpg" />
                </image>
                <clip>
                    <Circle centerX="40" centerY="40" radius="40" />
                </clip>
            </ImageView>

            <!-- Boutons de navigation -->
            <Button text="Gestion Utilisateurs" styleClass="nav-button" />
            <Button text="Gestion Produits" styleClass="nav-button" onAction="#goToProduit"/>
            <Button text="Gestion Réservations" styleClass="nav-button" />
        </VBox>
    </left>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button text="Actualiser Réservations" fx:id="btnActualiser" styleClass="button" />

            <ScrollPane fitToWidth="true">
                <GridPane fx:id="reservationGrid" style="-fx-padding: 20;" hgap="10" vgap="10">
                    <!-- Les cartes de réservation seront ajoutées dynamiquement ici -->
                </GridPane>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
