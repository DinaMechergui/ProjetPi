<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.tacheuser.contoller.Profile"
      spacing="15" alignment="CENTER" style="-fx-padding: 20px; -fx-background-color: #D3D3D3; -fx-border-radius: 10; -fx-background-radius: 10;">

    <Label text="Mon Profil" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #92a69b;" />

    <Label text="Nom complet:" style="-fx-text-fill: #b56852;"/>
    <TextField fx:id="nameField" editable="false" style="-fx-background-color: #e9ddd7; -fx-border-color: #c2c2c2; -fx-border-radius: 5; -fx-padding: 5;"/>

    <Label text="Email:" style="-fx-text-fill: #b56852;"/>
    <TextField fx:id="emailField" editable="false" style="-fx-background-color: #e9ddd7; -fx-border-color: #c2c2c2; -fx-border-radius: 5; -fx-padding: 5;"/>

    <Label text="Téléphone:" style="-fx-text-fill: #b56852;"/>
    <TextField fx:id="phoneField" editable="false" style="-fx-background-color: #e9ddd7; -fx-border-color: #c2c2c2; -fx-border-radius: 5; -fx-padding: 5;"/>

    <Label text="Âge:" style="-fx-text-fill: #b56852;"/>
    <TextField fx:id="ageField" editable="false" style="-fx-background-color: #e9ddd7; -fx-border-color: #c2c2c2; -fx-border-radius: 5; -fx-padding: 5;"/>

    <Label text="Genre:" style="-fx-text-fill: #b56852;"/>
    <TextField fx:id="genderField" editable="false" style="-fx-background-color: #e9ddd7; -fx-border-color: #c2c2c2; -fx-border-radius: 5; -fx-padding: 5;"/>

    <Button text="Déconnexion" onAction="#handleLogout"
            style="-fx-background-color: #b53931; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" />

    <!-- New "Take me to Reclamation" button -->
    <Button text="Take me to Reclamation" onAction="#handleGoToReclamation"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" />
</VBox>
