<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Wedding.controllers.CartController"
            prefHeight="794.0" prefWidth="715.0" style="-fx-background-color: #f4f1eb;">
    <children>
        <!-- Title -->
        <Label layoutX="36.0" layoutY="20.0" text="Your Cart"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #6d8c7a; -fx-font-family: 'Georgia';"/>

        <!-- Cart items Grid -->
        <GridPane fx:id="gridPaneCart" layoutX="36.0" layoutY="80.0" hgap="20" vgap="20" style="-fx-padding: 20;">
            <!-- Cart items will be dynamically added here -->
        </GridPane>

        <!-- Total Price -->
        <Label fx:id="totalPriceLabel" layoutX="36.0" layoutY="550.0" text="Total: 0.00 TND"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6d8c7a; -fx-font-family: 'Georgia';"/>
        <!-- Confirm and Cancel Buttons -->
        <Button layoutX="36.0" layoutY="600.0" text="Confirm Order" onAction="#handleConfirmOrder"
                style="-fx-background-color: #6d8c7a; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-border-radius: 5;"/>
        <Button layoutX="200.0" layoutY="600.0" text="Cancel" onAction="#handleCancelOrder"
                style="-fx-background-color: #e14d3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-border-radius: 5;"/>
        <Button layoutX="380.0" layoutY="600.0" text="Afficher la Facture" onAction="#showInvoice"
                style="-fx-background-color: #6d8c7a; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-border-radius: 5;"/>

        <!-- Cart Icon to go back to products -->
        <ImageView layoutX="650.0" layoutY="20.0" fitHeight="50" fitWidth="50" onMouseClicked="#goToProductsPage">
            <Image url="@/images/cart-icon.png"/>
        </ImageView>
    </children>
</AnchorPane>